<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<section class="experience-show text-center">
<p id="notice"><%= notice %></p>

<img class="img-fluid rounded fit-image mb-3 mb-md-0" src=<%= @experience.img_url || "https://i.imgur.com/ItgSjj3.jpg" %> width="350" height="150" sizes="25vw">

<h1>
  <%= @experience.title %>
</h1>
<p><%= @experience.location %></p>
</section>
<section class="experience-body center">
<p>
<%= @experience.text %>
</p>

<hr>
<% if account_signed_in? %>
  <%= link_to 'Edit', edit_experience_path(@experience) %>
<% end %>
<%= link_to 'Back', experiences_path %>
</section>
