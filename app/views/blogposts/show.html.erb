<section class="blogpost-show text-center">
  <p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @blogpost.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @blogpost.body %>
</p>

<% if account_signed_in? %>
  <%= link_to 'Edit', edit_blogpost_path(@blogpost) %> |
<% end %>
<%= link_to 'Back', blogposts_path %>
